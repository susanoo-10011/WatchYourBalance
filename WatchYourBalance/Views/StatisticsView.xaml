<UserControl x:Class="WatchYourBalance.Views.StatisticsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WatchYourBalance.Views"
        xmlns:VM="clr-namespace:WatchYourBalance.ViewModels"
        mc:Ignorable="d"
        Height="730" Width="1580">
    <UserControl.Resources>
        <VM:StatisticsVM x:Key="vm"/>
    </UserControl.Resources>
    <UserControl.DataContext>
        <Binding Source="{StaticResource vm}" />
    </UserControl.DataContext>
    <Grid>
        <StackPanel>

            <TextBlock Text="СТАТИСТИКА БАЛАНСА" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"
           FontSize="40" />

            <TextBlock Text="{Binding Balance}" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"
                    FontSize="40" Background="Black" Width="300"/>
        </StackPanel>
    </Grid>
</UserControl>
